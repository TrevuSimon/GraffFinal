@model GraffLeilaoGuilherme.Models.Lance

@{
    ViewBag.Title = "Create";
}
<script type="text/javascript">
    function validateMyForm() {
        var value = document.getElementById('@Html.Id("lanceValor")').value;
        if (@ViewBag.valorMax > value && @ViewBag.valorProduto > value) {
            alert("Valor tem que ser que [Maior lance: "+@ViewBag.valorMax+"] e [ValorProduto: "+ @ViewBag.valorProduto+"]");
            return false;
        }
        else
        {
            return true;
        }
    }
</script>

<h2>Create</h2>

@using (Html.BeginForm("Create", "Lances", FormMethod.Post, new { onsubmit="return validateMyForm()" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Lance</h4>
    <hr />
    <h1>Produto: @ViewBag.nomeProduto</h1>
    <p>Maior Lance: <span class="label label-default">@ViewBag.valorMax</span></p>
    <p>Valor: <span class="label label-default">@ViewBag.valorProduto</span></p>
    @ViewBag.idValue
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.pessoaID, "pessoa", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("pessoaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.pessoaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.produtoID, "Produto", htmlAttributes: new { @class = "control-label col-md-2", })
        <div class="col-md-10">
            @Html.DropDownList("produtoID", null, htmlAttributes: new { @class = "form-control", @select = ViewBag.idValue })
            @Html.ValidationMessageFor(model => model.produtoID, "", new { @class = "text-danger", })

            @*@Html.Hidden("produtoID", null, htmlAttributes: new { @class = "form-control", })*@

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.lanceValor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.lanceValor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lanceValor, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="hidden" name="id" value="@ViewBag.idValue" class="form-control" disabled />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}

