@model IEnumerable<GraffLeilaoGuilherme.Models.Pessoa>

@{
    ViewBag.Title = "Pessoas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar novo", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.pessoaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.pessoaID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.pessoaID })
        </td>
    </tr>
}

</table>
